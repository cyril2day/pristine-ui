{
  "name": "pristine-ui",
  "version": "0.0.1",
  "description": "Apple-inspired Vue.js  components designed for clean, intuitive, and accessible user experiences.",
  "type": "module",
  "private": false,
  "engines": {
    "node": "^20.19.0 || >=22.12.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "run-p type-check \"build-only {@}\" --",
    "preview": "vite preview",
    "test:unit": "vitest",
    "build-only": "vite build",
    "type-check": "vue-tsc --build",
    "lint": "eslint . --fix --cache"
  },
  "main": "./dist/pristine-ui.umd.cjs",
  "module": "./dist/pristine-ui.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/pristine-ui.js",
      "require": "./dist/pristine-ui.umd.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "vue",
    "ui",
    "component-library",
    "typescript",
    "scss",
    "apple",
    "hig",
    "aria",
    "accessibility"
  ],
  "author": "psi",
  "license": "MIT",
  "peerDependencies": {
    "vue": "^3.5.25"
  },
  "devDependencies": {
    "@tsconfig/node24": "^24.0.3",
    "@types/jsdom": "^27.0.0",
    "@types/node": "^24.10.1",
    "@vitejs/plugin-vue": "^6.0.2",
    "@vitest/eslint-plugin": "^1.5.0",
    "@vue/eslint-config-typescript": "^14.6.0",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.8.1",
    "eslint": "^9.39.1",
    "eslint-plugin-vue": "~10.5.1",
    "jiti": "^2.6.1",
    "jsdom": "^27.2.0",
    "normalize.css": "^8.0.1",
    "npm-run-all2": "^8.0.4",
    "sass": "^1.71.0",
    "typescript": "~5.9.0",
    "vite": "^7.2.4",
    "vite-plugin-dts": "^4.5.0",
    "vite-plugin-vue-devtools": "^8.0.5",
    "vitest": "^4.0.14",
    "vue": "^3.5.25",
    "vue-tsc": "^3.1.5"
  }
}
